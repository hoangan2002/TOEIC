@model ChillToeic.Models.Entity.User


@{
	ViewBag.Title = "User Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs overlay">
	<div class="container">
		<div class="bread-inner">
			<div class="row">
				<div class="col-12">
					<h2>My profile</h2>
					<ul class="bread-list">
						<li><a asp-area="" asp-controller="Home" asp-action="HomePage">Home</a></li>
						<li><i class="icofont-simple-right"></i></li>
						<li class="active">My Profile</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Breadcrumbs -->
<!-- Start Contact Us -->
<section class="contact-us section">
	<div class="containerUserProfile">
		<div class="row">
			<div class="col-lg-4 col-12">
				<div class="contact-us-form">
					<h2>Profile</h2>
					<div class="infoProfile">
						<h5>Name: <span>@Model.FullName</span></h5>
						<h5>Email: <span>@Model.Email</span></h5>
						<h5>DayOfBirth: <span>@Model.DateOfBirth?.ToString("dd/MM/yyyy")</span></h5>
						<h5>Point: <span>@Model.Point</span></h5>
					</div>
				</div>
			</div>
			<div class="col-lg-8 col-12">
				<div class="contact-us-form">
					<h2>Edit Profile</h2>
					@using (Html.BeginForm("UserProfile", "UserProfile", FormMethod.Post))
					{
						@Html.AntiForgeryToken()

						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							@Html.LabelFor(m => m.FullName)
							@Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter your full name" })
							@Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							@Html.LabelFor(m => m.Email)
							@Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
							@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
						</div>
						<div class="form-group">
							<label asp-for="DateOfBirth"></label>
							<input asp-for="DateOfBirth" class="form-control" />
						</div>

						<button type="submit" class="btn btn-primary">Update</button>
					}
				</div>
				<form asp-controller="Login" asp-action="ResetPassword" method="post">
					<!-- Your form fields go here -->

					<button type="submit" class="btn btn-primary">Update Password</button>
				</form>
			</div>
		</div>
	</div>
</section>

<!--/ End Contact Us -->
<style>
	.form-group:hover {
		background-color: #f8f9fa; /* Màu nền khi hover */
		border: 1px solid #ced4da; /* Hiển thị khung viền khi hover */
	}

	.form-group:active {
		transform: scale(0.98); /* Hiệu ứng thu nhỏ khi click */
	}

	.form-control:focus {
		box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25); /* Tăng độ rõ cho viền khi input được focus */
	}

	.infoProfile h5 {
		margin-bottom: 20px; /* Thêm khoảng cách giữa các thẻ h4 */
	}

	.infoProfile h4 span {
		color: #777; /* Màu nhạt hơn cho nội dung */
		font-weight: normal; /* Loại bỏ in đậm */
	}

	.containerUserProfile {
		margin-left: 40px;
		margin-right: 40px;
	}

	.contact-us .single-info .content h2 {
		color: #fff;
		font-size: 26px;
		font-weight: 600;
	}

	.progress {
		height: 35px;
	}

		.progress span {
			font-size: 25px;
		}

	.single-info {
		position: relative; /* Thiết lập vị trí tương đối */
	}

		.single-info .btn {
			position: absolute; /* Thiết lập vị trí tuyệt đối để điều chỉnh vị trí */
			right: 25px;
			top: 25px;
			color: #000;
			background-color: #fff;
			border: 1px solid #ccc; /* Thêm khung viền cho nút */
			padding: 5px 10px; /* Thêm padding cho nút */
			border-radius: 5px; /* Bo tròn các góc của nút */
		}

	.contact-us-form {
		border: 1px solid #ddd; /* Thêm khung viền cho phần form */
		padding: 20px;
		border-radius: 5px; /* Bo tròn các góc của form */
		margin-bottom: 20px; /* Thêm khoảng cách dưới cùng của form */
	}

		.contact-us-form h2 {
			margin-bottom: 20px; /* Thêm khoảng cách dưới cùng của tiêu đề */
		}

		.contact-us-form p {
			margin-bottom: 20px; /* Thêm khoảng cách dưới cùng của đoạn văn */
		}

</style>