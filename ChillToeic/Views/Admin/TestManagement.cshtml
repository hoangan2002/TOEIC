@{

    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<ChillToeic.Models.Entity.Test>

<div class="card-body">
    <p class="card-title mb-0">List of all learners</p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Duration</th>
                    <th>Number Of Question</th>
                    <th>Number Of Part</th>
                    <th>Number Of User Test</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var test in Model){
                <tr>
                        <td>@Html.DisplayFor(modelItem => test.Id)</td>
                        <td>@Html.DisplayFor(modelItem => test.Name)</td>
                        <td>@Html.DisplayFor(modelItem => test.Duration)</td>
                        <td>@Html.DisplayFor(modelItem => test.NumberOfQuestion)</td>
                        <td>@Html.DisplayFor(modelItem => test.NumberOfPart)</td>
                        <td>@Html.DisplayFor(modelItem => test.NumberOfUserTest)</td>
                        <td>@Html.DisplayFor(modelItem => test.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => test.Status)</td>
                        <td><a class="btn1" href="/Admin/TestDetailManagement?id=@Html.DisplayFor(modelItem => test.Id)">View</a></td>
                    </tr>
                }
                <!-- Thêm các hàng khác tương tự tại đây -->
            </tbody>

        </table>
    </div>
</div>
