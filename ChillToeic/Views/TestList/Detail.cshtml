@{

    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-vw4D99FQeF4ycpB8wO5RgfawQ-df9M0WV2HJ9bzoIq3gVhNHU+q22pMyo5mz6P8+" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


@model ChillToeic.Models.TestDetailViewModel

<!-- Breadcrumbs -->
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>Test detail</h2>
                    <ul class="bread-list">
                        <li><a asp-area="" asp-controller="Home" asp-action="HomePage">Home</a></li>
                        <li><i class="icofont-simple-right"></i></li>
                        <li class="active">Test detail</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->

<section class="contact-us section">
    <div class="chung">
        <div class="row">
            <div class="col-lg-8">
                <div class="inner">
                    <div class="contact-us-form" id="detail">
                        <div class="form-header">
                            <h2>@Model.Name</h2>
                            <a class="center" href="/CenterDetail/CenterDetail?id=@Model.EducationCenterId">@Model.EducationCenterName</a>
                        </div>
                        <div class="detail">
                            <h4 class="detail"><strong>Description:</strong> @Model.Description</h4>

                            <div class="row">
                                <div class="col-lg-6">
                                    <h3 class="detail"><i class="far fa-address-book"></i> @Model.NumberOfPart</h3>
                                    <h4 class="detail"><i class="far fa-clock"></i> @Model.Duration</h4>

                                </div>
                                <div class="col-lg-6">
                                    <h4 class="detail">
                                        <i class="fas fa-question-circle"></i>@Model.NumberOfQuestion
                                    </h4>
                                    <h4 class="detail"><i class="far fa-user"></i> @Model.NumberOfUserTest</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="inner">
                    <div class="contact-us-form">
                        <h2>Test now</h2>
                        <p></p>
                        <!-- Course start -->
                        <a href="/Test/Test?idTest=@Model.Id" class="btn" id="testNow">Test now</a>
                        <!--/ End Course -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #testNow {
        height: 100px;
        width: 100%;
        color: white;
        font-size: 3rem;
    }

    .contact-us-form {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-header {
        margin-bottom: 10px;
    }

        .form-header h2 {
            color: #333;
        }

        .form-header .center {
            color: black;
            text-decoration: none;
        }

    .Info {
        margin-top: 10px;
    }


    .row {
        display: flex;
    }

    .col-lg-6 {
        flex: 0 0 50%;
        max-width: 50%;
        padding: 0 15px;
    }


    .detail {
        font-size: 30px;
        margin: 20px 0 20px 0;
    }

    .center {
        font-size: 30px;
        color: black;
    }

        .center:hover {
            font-size: 33px;
            color: gray;
        }

    .chung {
        margin-left: 40px;
        margin-right: 40px;
    }
</style>