        text-align: left;
    }

    .body {
        background-color: #fff;
        /* Styles for the table body */
    }

    .noidung td {
        /* Styles for the table data cells */
        padding: 10px 20px; /* Adjust padding as needed */
    }

    .p-3 {
        /* Styles for the padding */
        padding: 0.75rem; /* Adjust padding as needed */
    }

    .bg-white {
        /* Styles for the background color */
        background-color: #fff; /* White background */
