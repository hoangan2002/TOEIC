@{

    ViewBag.Title = "Điểm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs -->
@model IEnumerable<ChillToeic.Models.Entity.TestOfUser>




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="min-h-screen bg-gray-100 flex items-center justify-center">
        <div class="container">
            <div class="chung">
                <table class="table">
                    <thead class="head">
                        <tr class="dau" id="payList">
                            
                            <th class="py-3 px-6 text-left" id="chu">Bài Kiểm tra</th>
                            <th class="py-3 px-6 text-center" id="chu">Điểm</th>
                            
                            
                            
                        </tr>
                    </thead>
                    <tbody class="body">
                        @if (Model != null)
                        {
                            @foreach (var order in Model)
                            {
                                <tr class="noidung" id="payList">
                                    <td class="py-3 px-6 text-left" id="chuden">@order.Test.Name</td>
                                    <td class="py-3 px-6 text-left" id="chuden">@order.Score</td>
                                    <td class="py-3 px-6 text-center">
                                    </td>
                                </tr>


                            }
                        }

                    </tbody>
                </table>
                <div class="p-3 bg-white border-t flex justify-between">
                    <!-- Pagination or navigation buttons here -->
                    <button class="text-xs text-blue-500"> &lt; 1 &gt; </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<style>
    #chu{
        color: #fff;
    }
    #chuden{
        color: #000;
    }
    .container {
        /* Your container styles here */
    }

